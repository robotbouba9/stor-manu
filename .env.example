# متغيرات البيئة للتطبيق
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# مفتاح الأمان (مطلوب)
SECRET_KEY=your-secret-key-here

# مفتاح JWT (اختياري - سيستخدم SECRET_KEY إذا لم يتم تحديده)
JWT_SECRET_KEY=your-jwt-secret-key-here

# رابط قاعدة البيانات (للنشر على Render)
# سيتم توفيره تلقائياً من Render عند ربط قاعدة بيانات PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# بيئة التطبيق (development أو production)
FLASK_ENV=development

# تفعيل وضع التطوير (true أو false)
FLASK_DEBUG=true

# المنفذ (سيتم تحديده تلقائياً من Render)
PORT=5000

# العنوان المضيف
HOST=0.0.0.0

